<h1>Categories!!</h2>

<% if current_user %>
<%= link_to 'Create New Category', new_category_path %>

<ul>
  <% @categories.each do |category|  %>
    <li>
      <%= link_to category.title, category_path(category) %>
    </li>
  <% end %>
</ul>

<% else %>

<ul>
  <% @categories.each do |category|  %>
    <li>
      <%= link_to category.title, category_path(category) %>
    </li>
  <% end %>
</ul>

<% end  %>
